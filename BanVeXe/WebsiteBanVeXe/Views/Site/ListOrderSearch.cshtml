@model IEnumerable<WebsiteBanVeXe.Models.order>

@{
    ViewBag.Title = "ListOrderSearch";
    Layout = "~/Views/Shared/_layOutSite.cshtml";
}
<h3>Tìm kiếm với từ khóa: @ViewBag.keyW</h3>
<section class="flight-destinations">
    <div class="container bg-white">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="flight-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Ticker ID</th>
                                <th>Customer name</th>
                                <th>Date created</th>
                                <th>Details</th>
                                <th>Total money</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <h6>@item.code</h6>

                                    </td>
                                    <td>
                                        <p>@item.name</p>

                                    </td>
                                    <td>
                                        <p>@item.created_ate.ToString("dd-MM-yyyy HH:mm tt")</p>
                                    </td>
                                    <td>
                                        <p><strong class="color-red-3"><a href="~/chi-tiet-order/@item.ID"> See details of Order</a></strong></p>

                                    </td>
                                    <td>
                                        <h6><strong class="color-red-3">@item.total.ToString("N0") VND</strong></h6>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
