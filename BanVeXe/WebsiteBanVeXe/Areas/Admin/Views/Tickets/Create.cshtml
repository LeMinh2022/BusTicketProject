@model WebsiteBanVeXe.Models.ticket

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
    List<SelectListItem> listcoach = new List<SelectListItem>();
    SelectListItem listcoachitem;
    foreach (var item in ViewBag.listCoach)
    {
        listcoachitem = new SelectListItem() { Value = item.id + "", Text = item.name + "" };
        listcoach.Add(listcoachitem);
    }
}

<div class="card card-title bg-white p-1 container">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Add ticket</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item"><a href="/Admin">Home</a></li>
                <li class="breadcrumb-item active">Add ticket</li>
            </ol>
        </div>
    </div>
</div>

<section class="container pt-2 card">
    @Html.Partial("_MessgeAlert")
    <div class="container bg-white pt-4 ">

        @using (Html.BeginForm("Create", "Tickets", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class=" row ">
                <div class="col-md-4">  </div>
                <div class="col-md-4"> <h3 class="text-center font-weight-bold text-success ">Add ticket</h3> </div>
                <div class="col-md-4 ">
                    <div class="float-right">
                        <button class="btn btn-sm bg-success text-white"><i class="far fa-save"></i>Save</button>
                        <a href="~/admin/Tickets" class="btn btn-sm bg-danger text-white"><i class="far fa-window-close"></i> Cancel</a>
                    </div>
                </div>
            </div>
            <div class=" row ">
                <div class="col-md-8">
                    <div>
                        <label for="psw"><span class="text-secondary font-weight-bold">Ticket title</span></label>
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <label for="psw"><span class="text-secondary font-weight-bold">Ticket description</span></label>
                        @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <label for="psw"><span class="text-secondary font-weight-bold">From</span></label>
                        <select name="departure_address" class="selectpicker form-control" tabindex="1" required>
                            <option value="TP.Hồ Chí Minh" selected="selected">TP.Hồ Chí Minh</option>
                            <option value="Hà Nội">Hà Nội</option>
                            <option value="Vân Đồn">Vân Đồn</option>
                            <option value="Hải Phòng">Hải Phòng</option>
                            <option value="Thanh Hóa">Thanh Hóa</option>
                            <option value="Vinh">Vinh</option>
                            <option value="Đồng Hới">Đồng Hới</option>
                            <option value="Huế">Huế</option>
                            <option value="Đà Nẵng">Đà Nẵng</option>
                            <option value="Chu Lai">Chu Lai</option>
                            <option value="Quy Nhơn">Quy Nhơn</option>
                            <option value="Tuy Hòa">Tuy Hòa</option>
                            <option value="Nha Trang">Nha Trang</option>
                            <option value="Đà Lạt">Đà Lạt</option>
                            <option value="Pleiku">Pleiku</option>
                            <option value="Ban Mê Thuột">Ban Mê Thuột</option>
                            <option value="Cần Thơ">Cần Thơ (VCA)</option>
                        </select>
                    </div>
                    <div>
                        <label for="psw"><span class="text-secondary font-weight-bold">To</span></label>
                        <select name="arrival_address" class="selectpicker form-control" tabindex="1">
                            <option value="TP.Hồ Chí Minh" selected="selected">TP.Hồ Chí Minh</option>
                            <option value="Hà Nội">Hà Nội</option>
                            <option value="Vân Đồn">Vân Đồn</option>
                            <option value="Hải Phòng">Hải Phòng</option>
                            <option value="Thanh Hóa">Thanh Hóa</option>
                            <option value="Vinh">Vinh</option>
                            <option value="Đồng Hới">Đồng Hới</option>
                            <option value="Huế">Huế</option>
                            <option value="Đà Nẵng">Đà Nẵng</option>
                            <option value="Chu Lai">Chu Lai</option>
                            <option value="Quy Nhơn">Quy Nhơn</option>
                            <option value="Tuy Hòa">Tuy Hòa</option>
                            <option value="Nha Trang">Nha Trang</option>
                            <option value="Đà Lạt">Đà Lạt</option>
                            <option value="Pleiku">Pleiku</option>
                            <option value="Ban Mê Thuột">Ban Mê Thuột</option>
                            <option value="Cần Thơ">Cần Thơ (VCA)</option>
                        </select>

                    </div>
                    <div>
                        <label for="psw"><span class="text-secondary font-weight-bold">Bus station</span></label>
                        @Html.EditorFor(model => model.airport, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.airport, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="col-md-4 ">
                    <div>
                        <label for="psw"><span class="text-secondary font-weight-bold">Ticket type</span></label>
                        <select name="ticketType" class="selectpicker form-control" tabindex="1">
                            <option selected value="Thường">Often</option>
                            <option value="Thương gia">Trader</option>
                        </select>

                    </div>


                    <div>

                        <label for="psw"><span class="text-secondary font-weight-bold">Departure time</span></label>
                        <input type="datetime-local" name="departure_date" class="form-control" value="" required />
                    </div>

                    <div>
                        <label for="psw"><span class="text-secondary font-weight-bold">Garage</span></label>
                        @Html.DropDownListFor(model => model.garageId, listcoach, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.garageId, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <label for="psw"><span class="text-secondary font-weight-bold">Ticket price</span></label>
                        <input type="number" name="price" class="form-control" value="" />
                    </div>
                    <div>
                        <label for="psw"><span class="text-secondary font-weight-bold">Status</span></label>
                        <select name="status" class="selectpicker form-control" tabindex="1">
                            <option value="1">show</option>
                            <option value="2">hide</option>
                        </select>
                    </div>

                </div>


            </div>
        }
    </div>
</section>
